<div class="source-index-content">
  <div class="columns source-index-cols">
    <div class="column is-9">
      <div class="link-panel">
        <a href="#" class='active'>Users</a>     
      </div>
      
      <div class="card source-index-list user-index">
        <h5 class='new-source-count'>Explore Users</h5>   
          <% @users.each do |user| %>
            <div class='source-item'>
              <div class="columns">
                <div class="column is-1">
                  <figure class='image is-48x48'>
                    <%= image_tag 'profile.png', class: 'is-roundish' %>
                  </figure>
                </div>
                <div class="column"> 
                  <div class="source-author">
                    <%= link_to user.username, user_path(user) %>  
                    
                      <% if current_user != user.id %>
                        <% unless @following.include?(user) %>
                          <%= link_to 'Follow', followings_follow_path(follower_id: current_user, followed_id: user.id), method: :post, class: 'follow-link' %>                        
                        <% end %>
                        <% if @following.include?(user) %>
                          <%= link_to 'Unfollow', followings_unfollow_path(follower_id: current_user, followed_id: user.id), method: :delete, class: 'unfollow-link' %>
                        <% end %>
                      <% end %>
                      <% if user.id == current_user %>
                        <%= link_to 'Edit', edit_user_path(user) %>
                      <% end %>
                    
                  </div>
                </div>
              </div>
            </div>                
          <% end %>
      </div>
    </div>
  </div>
</div>
  


