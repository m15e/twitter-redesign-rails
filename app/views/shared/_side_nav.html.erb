<div class="columns user-profile">
  <div class="column is-one-quarter">
    <figure class='image is-48x48'>
      <%= image_tag 'profile.png', class: 'is-rounded' %>
    </figure>
  </div>
  <div class="column is-three-quarters">
    <span><%= current_user ? '@' + current_user.username : ': )' %></span>
  </div>
</div>


<% if current_user %>
<div class="columns user-follow-stats">
  <div class="column is-half">
    
    <p><%= current_user.followeds.count %></p>
    <p>Following</p>
  </div>
  <div class="column is-half">
    <p><%= current_user.followers.count %></p>
    <p>Followers</p>
  </div>
</div>   

<ul class='side-nav-links'>
  <li><%= link_to '🏠 home', '#' %></li>
  <li><%= link_to '🖇️ connect', '#' %></li>
  <li><%= link_to '🧭 explore', '#' %></li>
  <li><%= link_to '👩‍🚀 profile', '#' %></li>  
</ul>
    
 
<% end %>