    <%= link_to '#' do  %>
      <%= image_tag 'explore.svg', class: 'image is-16x16' %>
      <span>Discover</span>
    <% end %>
  </li>
  <li> 
    <%= link_to '#' do  %>
      <%= image_tag 'user.svg', class: 'image is-16x16' %>
      <span>Profile</span>
    <% end %>
  </li>
