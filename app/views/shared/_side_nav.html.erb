<div class="columns user-profile">
  <div class="column is-one-quarter">
    <figure class='image is-48x48'>
      <%= image_tag 'profile.png', class: 'is-roundish' %>
    </figure>
  </div>
  <div class="column is-three-quarters">
    <span><%= !session[:user_id].nil? ? session[:name] : ': )' %></span>
  </div>
</div>


<% if current_user %>
<div class="columns user-follow-stats">
  <div class="column is-half">
    <a href="#"><%= session[:followeds] %><br><span>Following</span></a>
  </div>
  <div class="column is-half">
    <a href="#"><%= session[:followers] %><br><span>Followers</span></a>
  </div>
</div>   

